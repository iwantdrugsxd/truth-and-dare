{
  "buildCommand": "bash -c 'if command -v flutter &> /dev/null; then flutter build web --release; else echo \"Flutter not found. Please build locally and commit build/web/\"; exit 1; fi'",
  "outputDirectory": "build/web",
  "installCommand": "echo 'Skipping install - Flutter must be built locally'",
  "framework": null,
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/main.dart.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}


